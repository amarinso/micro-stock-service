{
  "extends": "eslint-config-airbnb",
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "comma-dangle": [
      "error",
      "never"
    ],
    "global-require": 1
  },
  "plugins": [
    "import"
  ],
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": [
        "node_modules",
        "src"
      ]
    }
  }
}
